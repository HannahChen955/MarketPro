# 服务器配置
PORT=9527
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/marketpro_ai?schema=public"

# Redis配置（用于任务队列）
REDIS_URL="redis://localhost:6379"

# AI服务配置
QWEN_API_KEY=your-qwen-api-key
QWEN_API_URL=https://dashscope.aliyuncs.com/api/v1/services/aigc/text-generation/generation

# 文件存储配置
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=marketpro-files

# 或者使用阿里云OSS
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-secret
ALIYUN_OSS_REGION=oss-cn-hangzhou
ALIYUN_OSS_BUCKET=marketpro-files

# 文件上传限制
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,ppt,pptx

# 任务队列配置
QUEUE_CONCURRENCY_AI_GENERATION=3
QUEUE_CONCURRENCY_FILE_EXPORT=5
TASK_TIMEOUT=1800000  # 30分钟

# 监控配置
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=30

# 安全配置
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15分钟