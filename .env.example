# MarketPro AI 环境变量配置示例
# 复制此文件为 .env.local 并填入真实的 API key

# ===========================================
# AI 服务配置
# ===========================================

# 通义千问 API 配置
QWEN_API_KEY=your_qwen_api_key_here
QWEN_API_BASE=https://dashscope.aliyuncs.com/api/v1
# 使用 qwen-max 模型 - 最强性能，适合复杂分析和创意写作
# 可选模型: qwen-turbo (快速) | qwen-plus (标准) | qwen-max (最强)
QWEN_MODEL=qwen-max

# OpenAI API 配置 (备用)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# 默认使用的 AI 服务 (qwen | openai)
DEFAULT_AI_PROVIDER=qwen

# ===========================================
# 数据库配置
# ===========================================

# PostgreSQL 数据库连接
DATABASE_URL="postgresql://username:password@localhost:5432/marketpro?schema=public"

# Redis 缓存配置 (可选)
REDIS_URL="redis://localhost:6379"

# ===========================================
# 应用配置
# ===========================================

# Next.js 配置
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# 应用环境
NODE_ENV=development

# 上传文件配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,pptx,docx,jpg,jpeg,png

# ===========================================
# 外部服务配置
# ===========================================

# 文件存储 (阿里云 OSS 或 AWS S3)
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET=your_oss_bucket_name
OSS_REGION=oss-cn-hangzhou

# 邮件服务配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# ===========================================
# 开发和调试配置
# ===========================================

# 启用调试模式
DEBUG=false

# API 请求日志
API_LOG_ENABLED=true

# 性能监控
PERFORMANCE_MONITORING=true

# Sentry 错误监控 (可选)
SENTRY_DSN=your_sentry_dsn_here
